@model IEnumerable<Student>
@{
    ViewData["Title"]= "Student List";
}

<div class="card-deck">
 @foreach (var student in Model)
    {
            var photoPath="~/images/"+(student.PhotoPath ??"student.jpg");

        <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>
            <img class="card-img-top imageThumnil" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary">View</a>
                <a  asp-controller="Home" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    } 
</div>    

